<script src="http://maps.google.com/maps/api/js?sensor=false"></script>

<!--Page Title-->
<section id="page-title">
  <div class="container">
    <div class="row">
      <div class="col-md-12 title-blue">
        <h2><%= @merchant.name %></h2>
      </div>
    </div>
  </div>
</section>


<!--About Content-->
<section id="blue-container">
  <div class="container">
    <div class="row">
      
      <div class="col-md-3 text-center">
        <%= render 'layouts/squareimage', square: @merchant.logo, size: "150" %>
      </div>
      
      <div class="col-md-9 margin-30">
        <h3><i class="fa fa-phone"></i> <%= @merchant.phone.to_s.gsub(/(.{4})/, '\1 ') %>   |   <a href="mailto:<%= @merchant.email %>"><i class="fa fa-envelope-o"></i> 電郵</a></h3>
        <div class="wrapper">
          <%= link_to raw('<i class="fa fa-globe"></i>') + "我的網頁", "http://#{@merchant.site}", :class => 'btn-main' %>
        </div>
        <p class="lead"><%= @merchant.opening %></p>
        <p class="white big-title">關於<%= @merchant.name %>:</p>
        <p class="white"><%= @merchant.description %></p>
      </div>

    </div>
  </div>
</section>

<section id="related">
  <div class="container">
    <div class="row margin-40">
      <div class="col-md-12">
        <h3><span class="blue"><%= @merchant.name %>的活動</span></h3>
      </div>
    </div>
    <%= render 'layouts/activities', activities: @related %>
  </div>
</section>

<!--Message-->
<section id="address">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1 text-center">
        <%= render 'layouts/mappick', merchant: true %>
      </div>
    </div>
  </div>
</section>

<!--Team Section-->
<section id="team">
  <div class="container">
    <div class="row margin-40">
      <div class="col-md-12">
        <h3><span class="blue"><%= @merchant.name %>的主持</span></h3>
      </div>
    </div>

    <%= render 'layouts/hosts', hosts: @merchant.hosts, color: "green" %>
  </div>
</section>



<script>
  var latlng, latlng_x, latlng_y, map, marker, marker_latlng, myOptions;
  latlng_x = <%= @current_address.lat %>;
  latlng_y = <%= @current_address.lng %>;
  latlng = new google.maps.LatLng(latlng_x, latlng_y);
  myOptions = {
    scrollwheel: false,
    zoom: 17,
    center: latlng,
    mapTypeId: google.maps.MapTypeId.ROADMAP
  };
  marker_latlng = new google.maps.LatLng(latlng_x, latlng_y);
  map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
  marker = new google.maps.Marker({
    position: marker_latlng,
    map: map
  });
</script>