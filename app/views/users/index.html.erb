<h3><%= current_user.name %></h3>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <% if user.avatar.present? %>
      <%= cl_image_tag(user.avatar.path) %>
      <% end %>
      <%= link_to user.name, user %> signed up <%= user.created_at.to_date %>
    </li>
  <% end %>
</ul>
<%= link_to "Sign out", destroy_user_session_path, :method => :delete  %>