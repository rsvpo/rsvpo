<div class="col-xs-6 col-md-3">
  <%= form_tag activities_path, method: :get do %>
    <div class="input-group">
  <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
  <%= text_field_tag :query, params[:query], class: "form-control" %>
</div>
    
<!--     <%= submit_tag "Search", name: nil %> -->
  <% end %>
</div>

<div class="col-xs-6 col-md-9 text-right">
  <div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      <span class="glyphicon glyphicon-sort-by-attributes"></span><span class="caret"></span>
    </button>
    <ul class="dropdown-menu pull-right" role="menu">
      <li>
        <%= link_to "Most popular", params.except(:order) %>
      </li>
      <li>
        <%= link_to "Most recent", params.merge({:order => "recent"}) %>
      </li>
      <li>
        <%= link_to "Cheapest", params.merge({:order => "cheapest"}) %>
      </li>
    </ul>
  </div>

  <div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      <span class="glyphicon glyphicon-map-marker"></span><span class="caret"></span>
    </button>
    <ul class="dropdown-menu pull-right" role="menu">
      <li>
        <%= link_to "Hong Kong", params.merge({:query => "香港島"}) %>
      </li>
      <li>
        <%= link_to "Kowloon", params.merge({:query => "九龍"}) %>
      </li>
      <li>
        <%= link_to "NT", params.merge({:query => "新界"}) %>
      </li>
      <li>
        <%= link_to "Other", params.merge({:query => "離島"}) %>
      </li>
    </ul>
  </div>
</div>