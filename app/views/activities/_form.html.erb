<%= bootstrap_form_for(@activity, layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-8  .col-md-offset-1") do |f| %>
  <%= f.attachinary_file_field :photos %>
  <%= f.text_field :title %>
  <%= f.text_area :about %>
  <%= f.number_field :price %>
  <%= f.text_area :bookmsg %>
  <%= f.number_field :duration %>
  <%= f.form_group do %>
    <%= f.submit %>
  <% end %>
<% end %>

<script type="text/javascript">
  $(document).ready(function() {
   $('.attachinary-input').attachinary()
  });
</script>