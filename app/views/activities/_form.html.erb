<div class="row">
  <div class="col-lg-12">
    <%= bootstrap_form_for(@activity, layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-8  .col-md-offset-1") do |f| %>
      <%= f.attachinary_file_field :photos, :label => "相片" %>
      <%= f.text_field :title, :label => "活動名稱", :placeholder => "活動名稱" %>
      <%= f.text_area :about, :label => "簡介", :placeholder => "簡介" %>
      <%= f.number_field :price, :label => "價錢", :placeholder => "價錢" %>  
      <%= f.number_field :duration, :label => "活動時間長短", :placeholder => "活動時間長短" %>
      <%= f.text_area :bookmsg, :label => "要求參加者資料", :placeholder => "要求參加者資料" %>
      <%= f.form_group do %>
        <%= f.submit "確認活動" %>
      <% end %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
   $('.attachinary-input').attachinary()
  });
</script>