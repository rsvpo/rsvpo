<!-- begin MAIN PAGE CONTENT -->
<div id="page-wrapper">

  <div class="page-content">

    <!-- begin PAGE TITLE ROW -->
    <div class="row">
      <div class="col-lg-12">
        <div class="page-title">
          <h1><%= @activity.title %>的時間表</h1>
          <ol class="breadcrumb">
            <li><i class="fa fa-dashboard"></i>  <a href="index.html">控制台</a>
            </li>
            <li class="active"><%= @activity.title %>的時間表</li>
          </ol>
        </div>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- end PAGE TITLE ROW -->

    <div class="row">

      <div class="col-lg-8">
        <div class="portlet portlet-default">
          <div class="portlet-heading">
            <div class="portlet-title">
              <h4><%= @activity.title %>共有 <span class="badge green"><%= @slot.count %></span> 個空檔</h4>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="portlet-body">
            <div class="table-responsive">
              <div id="calendar"></div>
            </div>
          </div>
        </div>
      </div>
      <!-- /.col-lg-8 -->

      <div class="col-lg-4">
        <div class="portlet portlet-default">
          <div class="portlet-heading">
            <div class="portlet-title">
              <h4>各時段的空檔</h4>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="portlet-body">
            <div class="text-center">
              <%= link_to raw('<i class="fa fa-edit"></i>') + " 新時段", new_rule_path, :class => 'btn btn-green' %>
            </div>
            <ul>
              <% @slot.each do |slot| %>
                <%= render 'progress', slot: slot %>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <!-- /.col-lg-4 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.page-content -->

</div>
<!-- /#page-wrapper -->
<!-- end MAIN PAGE CONTENT -->

<script>
  function reload_calendar(){
    var source = new Array();
    $('#calendar').fullCalendar({
        header: {
            left: 'prev,today,next',
            center: 'title',
            right: 'month,agendaWeek,agendaDay'
        },
        selectable: true,
        selectHelper: true,
        editable: true,
        ignoreTimezone: false,
        select: this.select,
        eventClick: this.eventClick,
        eventSources: [
          {url: '<%= schedule_path(activity: params[:activity_id],format: :json) %>',
          error: function() {
            alert('there was an error while fetching events!');
          }}
        ],
        timeFormat: 'h:mmtt{ - h:mmtt} '
    });
  }
</script>
<script>
  $(document).ready(function() {
    reload_calendar();
  });
</script>