<section id="content">
  <div class="container">
    <div class="sessions_new">
      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-signin' }) do |f| %>
        <h2 class="form-signin-heading blue">註冊</h2>
        <%= f.error_notification %>
        <%= display_base_errors resource %>
      <%= f.input :name, :autofocus => true, :label => false, :placeholder => "名稱" %>
        <%= f.input :email, :required => true, :label => false, :placeholder => "電郵" %>
        <%= f.input :password, :required => true, :label => false, :placeholder => "密碼" %>
        <%= f.input :password_confirmation, :required => true, :label => false, :placeholder => "確認密碼" %>
      <%= f.button :submit, '立即註冊', :class => 'btn btn-lg btn-main btn-block background-yellow' %>
        <%= render "devise/shared/links" %>
      <% end %>
    </div> <!-- /container -->
  </div>
</section>