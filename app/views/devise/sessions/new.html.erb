<section id="content">
  <div class="container">
    <%= render 'layouts/flash' %>
    <div class="sessions_new">
      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-signin' }) do |f| %>
      <h2 class="form-signin-heading green">登入</h2>
      <%= f.input :email, :label => false, :placeholder => "電郵", :autofocus => true, :class => "form-control" %>
      <%= f.input :password, :label => false, :placeholder => "密碼", :class => "form-control" %>
      <%= f.input :remember_me, :label => "記住我", :as => :boolean if devise_mapping.rememberable? %>
      <%= f.button :submit, "立即登入", :class => 'btn btn-lg btn-main btn-block background-yellow' %>
      <%= render "devise/shared/links" %>
      <% end %>
    </div> <!-- /container -->
  </div>
</section>