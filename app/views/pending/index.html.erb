<!-- begin MAIN PAGE CONTENT -->
<div id="page-wrapper">

  <div class="page-content">

    <!-- begin PAGE TITLE ROW -->
    <div class="row">
      <div class="col-lg-12">
        <div class="page-title">
          <h1>
            未確認預約
          </h1>
          <ol class="breadcrumb">
            <li><i class="fa fa-dashboard"></i>  <a href="index.html">控制台</a>
            </li>
            <li class="active">未確認預約</li>
          </ol>
        </div>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- end PAGE TITLE ROW -->

    <div class="row">
      <div class="col-lg-10 col-lg-offset-1 col-md-12">
        <div class="portlet portlet-default">
          <div class="portlet-body">
            <div class="row">
              <nav class="navbar mailbox-topnav" role="navigation">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                  <a class="navbar-brand" href="mailbox.html"><i class="fa fa-inbox"></i> 未確認預約</a>
                </div>
              </nav>
              <div class="col-lg-12">
                <div class="table-responsive">
                  <table class="table table-bordered table-striped table-hover">
                    <thead>
                      <tr>
                        <th>活動名稱</th>
                        <th>地址</th>
                        <th>時間</th>
                        <th>預約人</th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @mybookings.each do |booking| %>
                        <% book = Booking.find(booking.booking_id) %>
                        <tr>
                          <td><%= booking.title %></td>
                          <td><%= book.slot.address.address %></td>
                          <td><%= book.slot.start.strftime("%F, %l:%M %P") %> - <%= book.slot.finish.strftime("%F, %l:%M %P") %></td>
                          <td><%= book.name %></td>
                          <td>
                            <%= link_to '預約詳情', book, class: "btn btn-info" %>
                            <%= form_for(Booking.find(booking.booking_id), :html => { :method => :put }) do |f| %>
                              <%= f.hidden_field :confirm, :value => true %>
                              <%= button_tag(type: 'submit', class: "btn btn-info") do %>
                              確認預約
                              <% end %>
                            <% end %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
                <!-- /.table-responsive -->
              </div>
            </div>
            <!-- /.row -->
          </div>
        </div>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

  </div>
  <!-- /.page-content -->

</div>
<!-- /#page-wrapper -->
<!-- end MAIN PAGE CONTENT -->