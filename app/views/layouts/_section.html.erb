<section id="page-title">
  <div class="container">
    <div class="row">
      <div class="col-md-12 title-white">
        <% if title == "nav" %>
          <div class="categories text-center">
            <%= render 'categories', categories: @categories %>
          </div>
        <% else %>
          <h2><%= title %></h2>
          <% if defined?(captured) %>
            <%= captured %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>