<section id="page-title">
  <div class="container">
    <div class="row">
      <div class="col-md-12 title-white">
        <% if title == "nav" %>
          <div class="categories text-center">
            <%= render 'layouts/categories', categories: @categories %>
          </div>
        <% else %>
          <h2>
            <%= title %>
            <% if defined?(captured) %>
              <%= captured %>
            <% end %>
          </h2>         
        <% end %>
      </div>
    </div>
  </div>
</section>