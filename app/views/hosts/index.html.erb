<!-- begin MAIN PAGE CONTENT -->
<div id="page-wrapper">
  <div class="page-content">

    <!-- begin PAGE TITLE ROW -->
    <div class="row">
      <div class="col-lg-12">
        <div class="page-title">
          <h1>
            主持
          </h1>
          <ol class="breadcrumb">
            <li><i class="fa fa-dashboard"></i> <%= link_to "控制台", dashboard_path, 'data-no-turbolink' => true %>
            </li>
            <li class="active">主持</li>
          </ol>
        </div>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- end PAGE TITLE ROW -->
    <%= render 'layouts/flash' %>
    <div class="row">
      <div class="col-lg-12">
        <div class="portlet portlet-default">
          <div class="portlet-body">

            <nav class="navbar mailbox-topnav" role="navigation">
              <!-- Collect the nav links, forms, and other content for toggling -->
              <div class="mailbox-nav">
                <%= link_to raw('<i class="fa fa-edit"></i>') + " 新主持", new_host_path, :class => 'btn btn-green pull-right' %>
              </div>
            </nav>

            <div id="mailbox">

              <div id="mailbox-wrapper">

                <div class="table-responsive mailbox-messages">
                  <table class="table table-bordered table-striped table-hover">
                    <thead>
                      <tr>
                        <th>名稱</th>
                        <th>頭銜</th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @hosts.each do |host| %>
                          <tr>     
                              <td><%= host.title %></td>
                              <td><%= host.job %></td>
                            <td>
                              <%= link_to "更新主持", edit_host_path(host), class: "btn btn-orange" %>
                              <%= link_to "刪除主持", host, :method => :delete, class: "btn btn-red" %>
                            </td>
                          </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

  </div>
  <!-- /.page-content -->

</div>
<!-- /#page-wrapper -->
<!-- end MAIN PAGE CONTENT -->

<script>
  jQuery(function($) {
    $("tr[data-link]").click(function() {
      window.location = this.dataset.link
    });
  })
</script>