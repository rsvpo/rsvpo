<div id="page-wrapper">
  <div class="page-content">
    <div class="row">
      <div class="col-lg-12">
        <div class="page-title">
          <h1>我的活動
          </h1>
          <ol class="breadcrumb">
            <li><i class="fa fa-dashboard"></i>  <a href="index.html">控制台</a>
            </li>
            <li class="active">我的活動</li>
          </ol>
        </div>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    
    <div class="row">
      <div class="col-lg-10 col-lg-offset-1 col-md-12">
        <div class="portlet portlet-default">
          <div class="portlet-body">
            <div class="row">
              <nav class="navbar mailbox-topnav" role="navigation">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                  <a class="navbar-brand" href="mailbox.html"><i class="fa fa-inbox"></i> 我的活動</a>
                </div>
                
                <div class="mailbox-nav">
                  <%= link_to raw('<i class="fa fa-edit"></i>') + " 新活動", new_activity_path, :class => 'btn btn-white' %>
                </div>
              </nav>
              <div class="col-lg-12">
                <div class="table-responsive">
                  <table class="table table-bordered table-striped table-hover">
                    <thead>
                      <tr>
                        <th>活動名稱</th>
                        <th>價錢</th>
                        <th>地址</th>
                        <th>上架</th>
                        <th>時段</th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @activities.each do |activity| %>
                        <tr>
                          <td><%= activity.title %></td>
                          <td><%= activity.price %></td>
                          <td><%= activity.addresses.count %></td>
                          <td><%= activity.active %></td>
                          <td><%= activity.slots.count %></td>
                          <td>
                            <%= link_to '活動詳情', edit_activity_path(activity), class: "btn btn-info" %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
                <!-- /.table-responsive -->
              </div>
            </div>
            <!-- /.row -->
          </div>
        </div>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    
  </div>
</div>